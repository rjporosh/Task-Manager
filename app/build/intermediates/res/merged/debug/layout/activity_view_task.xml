<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamirregular.rjporosh.taskmanager.ViewTask">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date      :"
        android:id="@+id/datingTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="01-01-2016"
        android:id="@+id/dateTV"
        android:layout_alignTop="@+id/datingTV"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:onClick="show"
        android:id="@+id/buttonShow"
        android:layout_alignBottom="@+id/dateTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        android:layout_below="@+id/datingTV"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_weight="1"
            android:text="|Title |"
            android:textSize="18sp"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/timestartvtTV"
            android:layout_weight="1"
            android:text="|Time Start|"
            android:textSize="18sp"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/timeendvtTV"
            android:layout_weight="1"
            android:text="|Time End|"
            android:textSize="18sp"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/datevtTV"
            android:layout_weight="1"
            android:text="|Date|"
            android:textSize="18sp"
            android:textStyle="bold"

            />

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:layout_below="@+id/linearlayout"
        >

    </ListView>
</RelativeLayout>
